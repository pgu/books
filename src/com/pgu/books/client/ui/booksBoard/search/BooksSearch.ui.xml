<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .title {
    		/*
    		position: absolute;
    		top: 10px; 
    		left: 0px;
    		*/
    		
    		float: left;
    		margin-top: 10px;
    		margin-left: 0px;
    		 
            font-weight: bold;
            width: 230px;
            font-size: 2.5em;
        }
        .suggestBox {
    		/*
    		position: absolute;
    		top: 15px; 
    		right: 100px;
    		*/
    		
    		float: right;
    		margin-top: 14px;
    		margin-right: 10px;
    		
    		width: 200px;
        }
        .btnSearch {
    		/*
    		position: absolute;
    		top: 14px; 
    		right: 40px;
    		*/
    		
    		float: right;
    		margin-top: 14px;
    		margin-right: 40px;
    		
            font-weight: bold;
        }
        .container {
    		width: 100%;
    		height: 60px;
    		position: relative;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.container}">
        <g:Label ui:field="title" addStyleNames="{style.title}">Libros Harriet</g:Label>
        <g:Button ui:field="btnSearch" addStyleNames="{style.btnSearch}">Buscar</g:Button>
        <g:SuggestBox ui:field="suggestBox" addStyleNames="{style.suggestBox}"></g:SuggestBox>
    </g:HTMLPanel>
</ui:UiBinder> 